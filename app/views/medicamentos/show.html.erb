<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "Lista")}", medicamentos_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "Novo")}", new_medicamento_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Mostrar")}", medicamento_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.medicamento.nome", :default => t("activerecord.labels.nome", :default => "Nome")) %>:</b>
          <%= @medicamento.nome %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.medicamento.dosagem", :default => t("activerecord.labels.dosagem", :default => "Dosagem")) %>:</b>
          <%= @medicamento.dosagem %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Editar")}")} #{t("web-app-theme.edit", :default=> "Editar")}", edit_medicamento_path(@medicamento), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Excluir")}")} #{t("web-app-theme.delete", :default => "Excluir")}", medicamento_path(@medicamento), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Tem certeza que deseja escluir?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
