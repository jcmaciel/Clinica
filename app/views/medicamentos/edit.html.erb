<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "Lista")}", medicamentos_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "Novo")}", new_medicamento_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.edit", :default => "Editar")}", edit_medicamento_path %></li>
    </ul>
  </div>          
  <div class="content">            
    <h2 class="title"><%= t("web-app-theme.edit", :default => "Editar") %> Medicamento</h2>
    <div class="inner">
      <% form_for @medicamento, :url => medicamento_path(@medicamento), :html => { :class => :form } do |f| -%>
        <%= render :partial => "form", :locals => {:f => f} %>
      <% end -%>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
