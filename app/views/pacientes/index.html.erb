<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to "#{t("web-app-theme.list", :default => "Lista")}", pacientes_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "Novo")}", new_paciente_path %></li>
    </ul>
  </div>          
  <div class="content">          
    <h2 class="title"><%= t("web-app-theme.all", :default => "Lista")  %> de Pacientes</h2>
    <div class="inner">
      <table class="table">
        <tr>             
          <th class="first">ID</th>
                    <th>
            <%= t("activerecord.attributes.paciente.nome", :default => t("activerecord.labels.nome", :default => "Nome")) %>
          </th>
          <th>
            <%= t("activerecord.attributes.paciente.nome", :default => t("activerecord.labels.nome", :default => "Ãšltima Consulta")) %>
          </th>
               <th class="last">&nbsp;</th>
        </tr>
        <% @pacientes.each do |paciente| -%>
        <tr class="<%= cycle("odd", "even") %>">
          <td>
            <%= paciente.id %>
          </td>
                    <td>
            <%= link_to paciente.nome, paciente_path(paciente) %>
          </td>
  <td>
<td>
            <%= exibir_ultima_consulta(paciente) %>
          </td>
          <td class="last">

            <%= link_to "#{t("web-app-theme.show", :default => "Mostrar")}", paciente_path(paciente) %> |
<%= link_to "#{t("web-app-theme.edit", :default => "Editar")}", edit_paciente_path(paciente) %> |
            <%= link_to "#{t("web-app-theme.delete", :default => "Excluir")}", paciente_path(paciente), :method => :delete, :confirm => "#{t("web-app-theme.confirm", :default => "Tem certeza que deseja excluir?")}" %>

          </td>
        </tr>          
        <% end -%>
      </table>
<div class="paginacao"><%= will_paginate @pacientes %></div>
      <div class="actions-bar wat-cf">
        <div class="actions">
        </div>
        
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
