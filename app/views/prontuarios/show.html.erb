<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "Lista")}", prontuarios_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "Novo")}", new_prontuario_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Mostrar")}", prontuario_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.prontuario.motivo", :default => t("activerecord.labels.motivo", :default => "Motivo")) %>:</b>
          <%= @prontuario.motivo %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.prontuario.diagnostico", :default => t("activerecord.labels.diagnostico", :default => "Diagnostico")) %>:</b>
          <%= @prontuario.diagnostico %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.prontuario.observacao", :default => t("activerecord.labels.observacao", :default => "Observacao")) %>:</b>
          <%= @prontuario.observacao %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Editar")}")} #{t("web-app-theme.edit", :default=> "Editar")}", edit_prontuario_path(@prontuario), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Excluir")}")} #{t("web-app-theme.delete", :default => "Excluir")}", prontuario_path(@prontuario), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Tem certeza que deseja excluir?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>
